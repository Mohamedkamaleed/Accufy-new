@using WarehouseManagement.Core.ViewModels
@model ProductEditViewModel

<div class="container mt-4">
    <h2>Edit Product</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="ProductID" />
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="SKU"></label>
                    <input asp-for="SKU" class="form-control" />
                    <span asp-validation-for="SKU" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CategoryID"></label>
                    <select asp-for="CategoryID" asp-items="ViewBag.Categories" class="form-control">
                        <option value="">Select Category</option>
                    </select>
                    <span asp-validation-for="CategoryID" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="BrandID"></label>
                    <select asp-for="BrandID" asp-items="ViewBag.Brands" class="form-control">
                        <option value="">Select Brand</option>
                    </select>
                </div>

                <div class="form-group">
                    <label asp-for="SupplierID"></label>
                    <select asp-for="SupplierID" asp-items="ViewBag.Suppliers" class="form-control">
                        <option value="">Select Supplier</option>
                    </select>
                </div>

                <div class="form-group">
                    <label asp-for="InitialStock"></label>
                    <input asp-for="InitialStock" class="form-control" />
                </div>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Update</button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
