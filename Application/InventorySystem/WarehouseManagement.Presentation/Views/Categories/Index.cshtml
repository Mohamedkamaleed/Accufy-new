@using WarehouseManagement.Core.ViewModels
@using WarehouseManagement.Core.ViewModels.Common
@model List<WarehouseManagement.Core.ViewModels.CategoryListViewModel>


@{
    ViewData["Title"] = "Categories";
}
@{
    ViewData["Title"] = "Categories";
}

<h2>Categories</h2>

<a class="btn btn-primary mb-3" asp-action="Create">+ Add Category</a>

<!-- Filter Form -->
<form asp-action="Index" method="get" class="form-inline mb-3">
    <input type="text" name="search" class="form-control mr-2" placeholder="Search by name" value="@Context.Request.Query["search"]" />

    <select name="parentCategoryId" class="form-control" asp-items="ViewBag.ParentCategories">
        <option value="">-- None --</option>
    </select>
    <button type="submit" class="btn btn-secondary">Filter</button>
</form>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Parent Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.Description</td>
                <td>@category.ParentCategoryName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@category.CategoryID" class="btn btn-sm btn-warning">Edit</a>
                    <form asp-action="Delete" asp-route-id="@category.CategoryID" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
