@using WarehouseManagement.Core.ViewModels
@model IEnumerable<ServiceViewModel>

<div class="container mt-4">
    <h2>Services</h2>

    <form method="get" class="row g-3 mb-4">
        <div class="col-md-4">
            <input name="search" type="text" class="form-control" placeholder="Search by name or code..."
                   value="@Context.Request.Query["search"]">
        </div>
        <div class="col-md-3">
            <select name="categoryId" class="form-select" asp-items="ViewBag.Categories">
                <option value="">All Categories</option>
            </select>
        </div>
        <div class="col-md-3">
            <select name="supplierId" class="form-select" asp-items="ViewBag.Suppliers">
                <option value="">All Suppliers</option>
            </select>
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100">Filter</button>
        </div>
    </form>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Code</th>
                <th>Category</th>
                <th>Supplier</th>
                <th>Unit Price</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var service in Model)
            {
                <tr>
                    <td>@service.Name</td>
                    <td>@service.Code</td>
                    <td>@service.CategoryName</td>
                    <td>@service.SupplierName</td>
                    <td>@service.UnitPrice?.ToString("C")</td>
                    <td>
                        <span class="badge @(service.Status ? "bg-success" : "bg-secondary")">
                            @(service.Status ? "Active" : "Inactive")
                        </span>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@service.ServiceID" class="btn btn-sm btn-warning">Edit</a>
                        <form asp-action="Delete" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@service.ServiceID" />
                            <button type="submit" class="btn btn-sm btn-danger"
                                    onclick="return confirm('Are you sure you want to delete this service?')">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="Create" class="btn btn-success">Create New Service</a>
</div>