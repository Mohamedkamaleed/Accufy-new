@using WarehouseManagement.Core.ViewModels
@using WarehouseManagement.Core.ViewModels.Common
@model List<WarehouseManagement.Core.ViewModels.SupplierListViewModel>

@{
    ViewData["Title"] = "Suppliers";
}

<h2>Suppliers</h2>

<a class="btn btn-primary mb-3" asp-action="Create">+ Add Supplier</a>

<!-- Filter Form -->
<form asp-action="Index" method="get" class="form-inline mb-3">
    <input type="text" name="search" class="form-control mr-2" placeholder="Search by name" value="@Context.Request.Query["search"]" />

    <select name="parentSupplierId" class="form-control" asp-items="ViewBag.ParentSuppliers">
        <option value="">-- None --</option>
    </select>
    <button type="submit" class="btn btn-secondary">Filter</button>
</form>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Supplier in Model)
        {
            <tr>
                <td>@Supplier.Name</td>
                <td>@Supplier.Description</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@Supplier.SupplierID" class="btn btn-sm btn-warning">Edit</a>
                    <form asp-action="Delete" asp-route-id="@Supplier.SupplierID" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
