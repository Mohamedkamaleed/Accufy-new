@using WarehouseManagement.Core.ViewModels
@model List<SupplierListViewModel>

@{
    ViewData["Title"] = "Suppliers";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2>Suppliers</h2>
        </div>
        <div class="col-md-6 text-end">
            <a class="btn btn-primary" asp-action="Create">
                <i class="fas fa-plus"></i> Add New Supplier
            </a>
        </div>
    </div>

    <!-- Filter Form -->
    <div class="card mb-4">
        <div class="card-header">
            <h5>Filter Suppliers</h5>
        </div>
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-3">
                    <input type="text" name="search" class="form-control" placeholder="Search by name, number, city, country..." value="@Context.Request.Query["search"]" />
                </div>
                <div class="col-md-2">
                    <input type="text" name="city" class="form-control" placeholder="City" value="@Context.Request.Query["city"]" />
                </div>
                <div class="col-md-2">
                    <input type="text" name="country" class="form-control" placeholder="Country" value="@Context.Request.Query["country"]" />
                </div>
                <div class="col-md-2">
                    <select name="activeStatus" class="form-select">
                        <option value="">All Status</option>
                        <option value="true" selected='@(Context.Request.Query["activeStatus"] == "true")'>Active</option>
                        <option value="false" selected='@(Context.Request.Query["activeStatus"] == "false")'>Inactive</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary me-2">Filter</button>
                    <a asp-action="Index" class="btn btn-secondary">Clear</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Suppliers Table -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Supplier Number</th>
                            <th>Business Name</th>
                            <th>Contact</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Location</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var supplier in Model)
                        {
                            <tr>
                                <td>@supplier.SupplierNumber</td>
                                <td>@supplier.BusinessName</td>
                                <td>@supplier.ContactName</td>
                                <td>@supplier.Email</td>
                                <td>@supplier.Telephone</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(supplier.City) || !string.IsNullOrEmpty(supplier.Country))
                                    {
                                        @($"{supplier.City}, {supplier.Country}")
                                    }
                                </td>
                                <td>
                                    @if (supplier.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>
                                <td>@supplier.CreatedAt.ToString("yyyy-MM-dd")</td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="Details" asp-route-id="@supplier.SupplierID" class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@supplier.SupplierID" class="btn btn-sm btn-warning">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form asp-action="Delete" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@supplier.SupplierID" />
                                            <button type="submit" class="btn btn-sm btn-danger"
                                                    onclick="return confirm('Are you sure you want to delete this supplier?')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="9" class="text-center">No suppliers found</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Initialize tooltips
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
}