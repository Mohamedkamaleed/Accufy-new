@model WarehouseManagement.Core.ViewModels.SupplierContactViewModel

<div class="contact-row card mb-3">
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    <label asp-for="Position" class="control-label"></label>
                    <input asp-for="Position" class="form-control" />
                    <span asp-validation-for="Position" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-md-12">
                <div class="form-check">
                    <input asp-for="IsPrimary" class="form-check-input primary-contact" />
                    <label asp-for="IsPrimary" class="form-check-label"></label>
                </div>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-md-12 text-end">
                <button type="button" class="btn btn-danger btn-sm remove-contact">Remove</button>
            </div>
        </div>
    </div>
</div>